{
  "root": true,
  "plugins": ["@typescript-eslint", "eslint-plugin-tsdoc", "notice"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./",
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "react-app"
  ],
  "rules": {
    "tsdoc/syntax": "error",
    "brace-style": "error",
    "no-unused-vars": "error",
    "eqeqeq": "error",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "memberLike",
        "modifiers": ["private"],
        "format": ["camelCase"],
        "leadingUnderscore": "require"
      }
    ],
    "notice/notice": [
      "error",
      {
        "mustMatch": "/\\*\\*\n \\* Copyright \\(c\\) King County\\. All rights reserved\\.\n \\* @packageDocumentation\n \\*/",
        "template": "// FILENAME\n/**\n * Copyright (c) King County. All rights reserved.\n * @packageDocumentation\n */\n\n",
        "messages": {
          "whenFailedToMatch": "Couldn't find a valid copyright header, are you sure you added it?"
        }
      }
    ]
  }
}
